<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skin.skinswitch.MainActivity">
    <tag android:id="@+id/sss" android:value="@string/app_name"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        app:skin="true"
        android:background="@drawable/theme_drawable"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView

        android:id="@+id/tv_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch To Night"
        android:textColor="@color/mainColor"
        android:drawableStart="@drawable/icon_default_head"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_click1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch To Day"
        android:textColor="@color/main_color"
        android:layout_marginTop="20dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/tv_click"
        app:layout_constraintStart_toStartOf="@id/tv_click"
        app:layout_constraintEnd_toEndOf="@id/tv_click"
        />
    <TextView
        android:id="@+id/tv_click2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="current: "
        android:textColor="@color/main_color"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_click1"
        app:layout_constraintStart_toStartOf="@id/tv_click"
        app:layout_constraintEnd_toEndOf="@id/tv_click"
        />


</androidx.constraintlayout.widget.ConstraintLayout>